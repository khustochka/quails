- @page_title = "Архив блога"

%h1= page_header

= render 'partials/years'

- @archive.each do |year, months|
  %h2= link_to("#{t('blog.year.year')} #{year}", year_path(year: year))
  %ul
    - months.each do |month|
      %li
        = link_to month_path({:year => year, :month => "%02d" % month.raw_month}) do
          = t('date.month_names')[month.raw_month.to_i]
        (#{month.posts_count})
