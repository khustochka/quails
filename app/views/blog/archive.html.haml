-# frozen_string_literal: true
- @page_title = t(".title")

- @robots = 'NOINDEX'

- @jumbo_class = "jumbo-archive"

- content_for :jumbo do
  = render partial: 'partials/translated', locals: { blog: true }
  %h1= page_header


= render 'filters/years'

%div.fluid-row

  - @archive.each do |year, months|
    %div.fluid-column.span_3
      %h2= link_to("#{t('blog.year.year')} #{year}", year_path(year: year))
      %ul
        - months.each do |month|
          %li
            = link_to t('date.month_names')[month["raw_month"]], month_path(year: year, month: "%02d" % month["raw_month"])
            (#{month["posts_count"]})
