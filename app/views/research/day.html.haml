- @page_title = 'Images and posts of the day'

%h1= [link_to('Research', research_path), @page_title].join(' : ').html_safe

%h2= "%s %s" % [t("date.month_names")[@month.to_i], @day]

%p
  = link_to("<< previous #{@prev_day}", {:day => @prev_day}) if @prev_day
  \|
  = link_to("next #{@next_day} >>", {:day => @next_day}) if @next_day

- @images.each do |img|
  %h3= link_to image_title(img), public_image_path(img)
  %p
    %i= img.species.map(&:name_sci) * ', '
  %p= image_tag(jpg_url(img))
  %p= post_link([l(img.observ_date, :format => :long), img.locus.name_en] * ', ', img.post, true)
