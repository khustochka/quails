- @page_title = "Species seen after #@period days"

%h1= research_page_header

%table.neat_table
  %th Species
  %th= link_to_unless_current('Last seen ⇓', params.merge({:sort => :date1}))
  %th= sorting_link_to('Seen again ⇓')
  %th= link_to_unless_current('Days ⇓', params.merge({:sort => :days}))

  - @list.each do |el|
    %tr
      %td= species_link(el[:sp])
      %td= el[:date1]
      %td= el[:date2]
      %td.align-right= el[:days]
