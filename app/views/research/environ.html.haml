- @page_title = 'Environment'

%h1= page_title

%dl
  %dt Ruby version
  %dd #{RUBY_ENGINE}-#{RUBY_VERSION}-p#{RUBY_PATCHLEVEL}

  %dt Rails version
  %dd= Rails.version

  %dt Rack release
  %dd= Rack.release

  - if server_software = request.env['SERVER_SOFTWARE']
    %dt Server Software
    %dd= server_software

  %dt Rails Environment
  %dd= Rails.env

  %dt Quails Environment
  %dd= Quails.env

  %dt LC_COLLATE (should be "C")
  %dd= @lc_collate

  %dt LC_CTYPE (should be "en_US.UTF8")
  %dd= @lc_ctype

  - if $revision
    %dt Revision
    %dd
      :textile
        ["#{$revision}":https://bitbucket.org/khustochka/quails/commits/#{$revision}]

        #{$commit}
