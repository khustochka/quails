- @page_title = @locus.slug

%h1= @locus.slug

= render 'admin/shortcuts' if current_user.admin?

%p
  %b Type:
  = Locus::TYPES[@locus.loc_type]
%p
  %b Parent:
  = @locus.parent.nil? ? '-' : (link_to @locus.parent.slug, @locus.parent)
%p
  %b English name:
  = @locus.name_en
%p
  %b Russian name:
  = @locus.name_ru
%p
  %b Ukrainian name:
  = @locus.name_uk
%p
  %b LatLon:
  = latlon(@locus)
