-# no_viewport is for very wide pages, e.g. with table
- @no_viewport = true

- @page_title = 'Locations'

%h1= page_header

- provide :add_shortcuts do
  %li= link_to 'Order public locations', action: :public

= render 'admin/shortcuts' if current_user.admin?

%table.neat_table.loci_index
  %tr
    %th Slug
    %th Names
    %th List
    %th.align-center LatLon
    %th Public #
    %th

  = render partial: 'locus_tree', collection: @loci.to_a, locals: {indent: 0}
