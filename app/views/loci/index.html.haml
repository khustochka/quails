-# no_viewport is for very wide pages, e.g. with table
- @no_viewport = true

- javascript 'ujs'

- @page_title = 'Locations'

%h1= page_header

= render 'admin/shortcuts' if current_user.admin?

%p
  = link_to 'Order public locations', action: :public

%table.neat_table.loci_index
  %tr
    %th Code
    %th Names
    %th.align-center LatLon
    %th Public #
    %th

  = render partial: 'locus_tree', collection: @loci[nil], locals: {indent: 0}
