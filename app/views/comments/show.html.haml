- @page_title = "Comment #{@comment.id}"

%h1= page_header

- if notice
  %p#notice= notice

%p
  %b Parent:
  = @comment.parent_id
%p
  %b Name:
  = @comment.name
%p
  %b Email:
  = @comment.email
%p
  %b Url:
  = @comment.url
%p
  %b Text:
= @comment.formatted.text

%p
  %b Approved:
  = @comment.approved

%p
  %b IP:
  = @comment.ip

= link_to 'Edit', edit_comment_path(@comment)
= precede ' | ' do
  = link_to 'Back', comments_path
