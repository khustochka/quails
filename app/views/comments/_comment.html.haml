.comment_box{id: "comment#{comment.id}", class: comment.approved ? nil : 'hidden-comment'}
  %div.header-with-subheader
    %h6.name= link_to_if(comment.sane_url.present?, comment.formatted.name, comment.sane_url, :rel => 'nofollow')
    %i
      %time= link_to(l(comment.created_at, :format => :long), public_comment_path(comment, @post))
    = default_destroy_link(comment) if current_user.admin? && action_name != 'reply'
  .comment_body
    = comment.formatted.text

  - if action_name != 'reply'
    %ul.reply
      %li= link_to(t('.reply_link'), reply_comment_path(comment), data: {comment_id: comment.id})

- subcomments = @comments.try(:[], comment.id)

- if subcomments || notice && notice[comment.id]
  .subcomments
    - if subcomments
      = render :partial => 'comments/comment', :collection => subcomments

    - if notice && notice[comment.id]
      %p.comment_screened= notice[comment.id]
