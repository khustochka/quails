-# @body_class = 'wider'

- javascript 'pjax_pagination'

- @js_features = [:videoQuality]

- @page_title = t(".window_title")
- @page_header = t(".title")

- @robots = 'NOINDEX'
- @feed = :photos

= render 'partials/translated'

%div.header-with-subheader
  %h1.over-header
    = page_header
  %ul.subheader-menu
    %li= link_to t('menu.gallery'), gallery_path
    = feed_list_item

- unless params[:page]
  %h3
    %i= t('images.index.last_updated', date: l(@videos.first.created_at, format: :long))

%div
  = render @videos

= paginate @videos
