- @page_title = 'Flickr tasks'

%h1= @page_title

%table.neat_table
  %tr
    %th
    %th Code
    %th Title
    %th Date
    %th Flickr

  - @images.each do |image|
    %tr
      %td.thumbnail= link_to image_tag(thumbnail_url(image)), public_image_path(image)
      %td= link_to image.slug, edit_image_path(image)
      %td= image_title(image)
      %td= image.observ_date
      %td
        - @flickr_imgs[image.id].each do |img|
          %a{:href => FlickRaw.url_photopage(img)}
            %img{:src => FlickRaw.url_t(img) }

= paginate @images
