- title = flickr_image.title
- author = flickr_image.ownername
%div.flickr_result_cell<
  %a{href: FlickRaw.url_photopage(flickr_image), class: "img", title: "#{title} by #{author}, on Flickr"}<
    %img{:src => FlickRaw.send(@flickr_img_format, flickr_image), data: {id: flickr_image.id} }
  %span.flickr_subscr<
    by #{link_to(author, FlickRaw.url_photostream(flickr_image), rel: "nofollow")} on Flickr.
