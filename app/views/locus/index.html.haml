- @page_title = 'Listing locations'

%h2 Listing locations

%table.neat_table
  %tr
    %th Code
    %th Parent
    %th Names
    %th.align-center LatLon
    %th
      
  - Locus::TYPES.each do |type|
    %tr
      %td{:colspan => 5}
        %h3= type.pluralize.upcase
    - @locus_by_type[type].each do |locus|
      %tr
        %td= link_to locus.code, edit_locus_path(locus)
        %td= locus.parent.try(:code) || '-'
        %td= %w(en ru uk).map{|lang| "#{lang}: #{locus.send('name_'+lang)}"}.join('<br />').html_safe
        %td.align-center= latlon(locus)
        %td= link_to '[x]', locus, :confirm => 'Are you sure?', :method => :delete

%br
