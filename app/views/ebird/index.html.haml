- @js_features = ['ebirdTransitions']

- @page_title = 'eBird submissions'

%h1= page_header

= render 'admin/shortcuts' if current_user.admin?

- if notice
  %p#notice= notice

%table.neat_table
  %tr
    %th id
    %th Name
    %th file
    %th Created
    %th Cards
    %th Period
    %th Status
    %th

  - @files.each do |file|
    %tr
      %td= file.id
      %td= link_to file.name, file
      %td= link_to "[csv]", file.download_url
      %td= file.created_at.strftime("%F %R")
      %td
        = file.cards.size
        - if file.outdated?
          %small.draft.tag OUT
      %td
        %nobr= file.cards.minimum(:observ_date)
        \-
        %nobr= file.cards.maximum(:observ_date)
      %td.status-line
        = render partial: 'status_line', locals: {file: file}
      %td= default_destroy_link(file)

= paginate @files
