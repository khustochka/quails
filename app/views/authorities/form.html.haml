- stylesheet 'forms'

- @page_title = "#{new_or_edit_label(@authority)} authority"

%h1= page_header

= render 'admin/shortcuts' if current_user.admin?

= simple_form_for @authority do |form|
  %div
    = form.input :slug
  %div
    = form.input :name
  %div
    = form.input :description

  .buttons
    = default_submit_button(form)
