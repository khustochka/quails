- @page_title = "[#{@book.name}]"

%h1= @page_title

= render 'admin/shortcuts' if current_user.admin?

%dl
  %dt
    %b= @book.slug
  %dd
    %i= @book.description

%h2= Species

%table.neat_table
  %tr
    %th.align-right No
    %th Scientific name
    %th Global species
    %th Book
    %th Names
    %th.align-right Avibase id

  - @species.group_by_family.each do |fam, species_list|
    %tr
      %td
      %td
      %td{:colspan => 5}
        %h3= "#{fam[:order].upcase}: #{fam[:family]}"
    - species_list.each do |species|
      %tr
        %td.align-right= species.index_num
        %td= species.name_sci
        %td= link_to content_tag(:i, species_link(species.species, species.species.name_sci)), species.species
        %td= species.book
        %td= %w(en ru uk).map{|lang| "#{lang}: #{species.send("name_#{lang}")}"}.join('<br />').html_safe
        %td.align-right= link_to species.avibase_id, avibase_species_url(species.avibase_id)

