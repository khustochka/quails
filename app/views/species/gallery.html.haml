- @wider = true

- @page_title = t(".title")

- cache do

  %div.header-with-subheader
    = feed_icon
    %h1.over-header
      = page_header
    %ul.subheader-menu
      %li= link_to(t("countries.gallery.title.ukraine"), country_path(country: 'ukraine'))
      %li= link_to(t("countries.gallery.title.usa"), country_path(country: 'usa'))
      %li= link_to t('menu.photos'), images_path

  %ul.thumbnails
    = render :partial => 'thumbnail', :collection => @species

    - if @thumbnail_for_multiple_species
      %li.imageholder
        = link_to image_tag(thumbnail_url(@thumbnail_for_multiple_species), alt: '[фото нескольких видов]'), photos_multiple_species_path
        %div.imagetitle
          = link_to photos_multiple_species_path do
            %div Разные виды на одном фото
