- if defined?(total_count)
  - i = total_count - new_lifer_counter

%li.lifer_row{value: i}
  = species_link(new_lifer.species)
  = name_sci(new_lifer.species)
  %span
    = surround'(', ')' do
      = content_tag(:time, l(new_lifer.card.observ_date, format: :long), {datetime: new_lifer.card.observ_date.iso8601})
