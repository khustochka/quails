- i = @lifelist.size + 1
- sorter = params[:sort].nil? ? :first_seen : :last_seen
- @lifelist.chunk {|s| s.send(sorter).observ_date.year}.each do |year, species_list|
  - if params[:year].blank?
    %tr
      %td.empty_cell
      %td{:colspan => 5}
        %h5.first_seen{id: "first_seen_#{year}"}= t("lists.by_date.seen_in.#{params[:sort] ? 'last' : 'first'}", year: year)
  - species_list.each do |sp|
    %tr
      %td.num_cell.align-right= "#{i -= 1}."
      = render partial: 'lists/advanced/lifer', object: sp
