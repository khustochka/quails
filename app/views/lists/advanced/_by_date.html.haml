- i = @lifelist.size + 1
- sorter = params[:sort].nil? ? :first_seen_date : :last_seen_date
- @lifelist.chunk {|s| s.send(sorter).year}.each do |year, species_list|
  - if params[:year].blank?
    %tr
      %td
      %td{:colspan => 5}
        %h5.first_seen= t("lists.by_date.seen_in.#{params[:sort] ? 'last' : 'first'}", year: year)
  - species_list.each do |sp|
    %tr
      %td.align-right= "#{i -= 1}."
      = render partial: 'lists/advanced/lifer', object: sp
