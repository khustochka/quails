- i = 0
- @lifelist.group_by_taxonomy do |order, family, species_list|
  %tr
    %td
    %td{:colspan => 5}
      %h2= render partial: 'species/taxonomy', locals: {rank: :order, value: order}
      %h3= render partial: 'species/taxonomy', locals: {rank: :family, value: family}
  - species_list.each do |sp|
    %tr
      %td.align-right= "#{i += 1}."
      = render partial: 'lists/advanced/lifer', object: sp
