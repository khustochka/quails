- stylesheet 'forms', 'jquery-ui'
- javascript 'image_form'
- javascript AssetsHelper::GMAP_API_URL, 'image_map' if @image.persisted?

- @page_title = "#{new_or_edit_label(@image)} image"

%h1= page_header

= render 'admin/shortcuts' if current_user.admin?

= simple_form_for @image, html: {class: 'image'} do |form|

  - if @image.errors.any?
    %ul.errors
      - @image.errors.full_messages.each do |msg|
        %li= msg

  %div
    = form.input :slug
    = form.input :title

  %p= image_tag(thumbnail_url(@image), class: 'image_pic')

  %table
    %tr
      %td.observation_search{colspan: 2}
        = simple_fields_for @image.search_applicable_observations do |form2|
          = form2.input :observ_date, label: 'Date:', as: :string,
              input_html: {class: 'short', maxlength: 10, type: 'date'}, required: false
          = form2.input :locus_id, label: 'Location:', collection: Locus.list_order,
              input_html: {class: 'suggest-combo'}, required: false
          = form2.input :species_id, label: 'Species:', collection: species_for_select,
              input_html: {class: 'suggest-combo'}, required: false
          %input#obs_limit{type: 'hidden', name: 'limit', value: 5}
          %button.obs_search_btn{type: 'button'} Search
    %tr
      %td.observation_list
        %h5 Current observations
        = link_to('Restore original',
            observations_image_path(id: @image.id),
                remote: true, class: 'restore pseudolink') unless @image.new_record?
        %ul.obs-list.current-obs
          = render partial: 'observations/obs_item', collection: @image.observations
      %td.observation_options
        %h5 Found observations
        %ul.obs-list.found-obs

  %h3 Flickr
  %table
    %tr
      %td
        = form.input :flickr_size, as: :select,
              collection: ImagesHelper::FLICKR_SIZES, input_html: {size: '8'}, include_blank: false
        = form.input :flickr_id, as: :hidden
      %td.flickr_search
        %div.input.string
          %label.string Text:
          %input.string#flickr_text{name: 'flickr_text', type: 'text'}
        %div.input.string
          %label.string Date:
          %input.string.short#flickr_date{name: 'flickr_date', maxlength: '10', type: 'date'}
        %button.flickr_search_btn{type: 'button'} Search

  %div
    = form.input :description
    = form.input :index_num, input_html: { size: 10, type: :text }
  .buttons
    = default_submit_button(form)

- if @image.persisted?
  %p= link_to 'DELETE', @image, data: {confirm: 'Are you sure?'}, method: :delete

  %h3 Map

  #googleMap
