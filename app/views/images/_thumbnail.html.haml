- path_method = (action_name == "unflickred") ? :edit_flickr_image_path : :image_path

- thumbnail.formatted.title.tap do |img_title|
  %li.imageholder{'data-image-id' => thumbnail.id}
    = link_to image_tag(thumbnail_url(thumbnail), alt: "[фотография]"), send(path_method, thumbnail)
    %div.imagetitle= link_to img_title, image_path(thumbnail)
