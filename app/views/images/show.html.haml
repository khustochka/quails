- @page_title = @image.formatted.title

- if notice
  %p#notice= notice

- provide :add_shortcuts do
  %li= link_to 'Edit map', action: :map_edit
  %li= link_to 'Edit flickr data', action: :flickr_edit

= render 'admin/shortcuts' if current_user.admin?

%h1= page_header

%div.image_canvas= image_tag(jpg_url(@image))

= render partial: "images/long_details", locals: {image: @image}

%table.image_nav
  %tr
    %th пред.
    %th
    %th след.
  - @image.species.each do |sp|
    %tr
      %td
        - if prev_image = @image.prev_by_species(sp)
          = link_to("&lt;".html_safe, prev_image, class: 'img_prev_next')
        - else
          %span.img_prev_next &ndash;

      %td
        %nav= sp.name

      %td
        - if next_image = @image.next_by_species(sp)
          = link_to("&gt;".html_safe, next_image, class: 'img_prev_next')
        - else
          %span.img_prev_next &ndash;


  - if @image.multi?
    %tr
      %td{colspan: 3}
        %nav= link_to("Еще фото нескольких видов", photos_multiple_species_path)
