- @page_title = image_title(@image)

- if notice
  %p#notice= notice

%h1= page_header

- provide :add_shortcuts do
  %li= link_to 'Edit map', action: :map_edit
  %li= link_to 'Edit flickr data', action: :flickr_edit

= render 'admin/shortcuts' if current_user.admin?

%p= image_tag(jpg_url(@image))

- list_type = @image.multi? ? :ol : :ul
= content_tag(list_type) do
  - @image.species.each do |sp|
    %li
      = species_link(sp)
      = name_sci(sp)

- p = @image.post(current_user.available_posts)
- stop = p ? ";" : "."

%p
  Снято #{l(@image.observ_date, :format => :long)},
  %i= "#{@image.locus.name}#{stop}"

  - if p
    встреча описана в посте «#{post_link(post_title(p), p, true)}».

= wiki_filter(@image.description)

-# TODO: more photos of several species
-#- if @image.multi?
-#  = link_to("More photos of several species", multi_spp_path)

- if @prev
  = link_to("<< Previous image", @prev)

- if @next
  = link_to("Next image >>", @next)
