-# @body_class = 'wider'

- javascript 'pjax_pagination'

- @page_title = t(".window_title")
- @page_header = t(".title")

- @robots = 'NOINDEX'

= render 'partials/translated'

%div.header-with-subheader
  %h1
    = page_header
  %ul.subheader-menu
    %li= link_to t('.species_gallery'), gallery_path
    = feed_list_item

- unless params[:page]
  %h3
    %i= t('.last_updated', date: l(@images.first.created_at, format: :long))

%div.thumbnails
  = render_justified @images.map(&:to_thumbnail)

= paginate @images
