- @wider = true

- javascript 'pjax_pagination'

- @page_title = t('menu.photos')

- @robots = 'NOINDEX'

%div.header-with-subheader
  = feed_icon
  %h1
    = page_header
  %ul.subheader-menu
    %li= link_to t('.species_galery'), gallery_path

%div.thumbnails
  - justify(@images.map(&:to_thumbnail)).each do |thumbs|
    %div.thumbs_row= render thumbs

= paginate @images
