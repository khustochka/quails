- javascript 'pjax_pagination'

- @page_title = t('menu.photos')

%div.header-with-subheader
  %h1= page_header
  %div.subheader-menu
    &bull;
    = link_to t('.species_galery'), gallery_path
    %span.feed= link_to(t('misc.feed'), {:controller => :feeds, :action => @feed, :format => :xml})

%ul.thumbnails
  = render :partial => 'thumbnail', :collection => @images

= paginate @images
