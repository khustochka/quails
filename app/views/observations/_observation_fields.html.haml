%div.obs-row
  - obs = form.object
  - if @light_species_selector
    = form.input :species do
      = form.input_field :species, as: :string, name: '', value: obs.species.try(:name_sci), class: 'sp-light'
      = form.input_field :species_id, as: :hidden
  - else
    = form.association :species, collection: species_for_select,
        include_blank: true, required: false, input_html: {class: 'sp-suggest'}
  = form.input :mine, label: 'Mine?'
  = form.input :quantity, input_html: {class: :short}
  = form.input :notes
  = form.input :voice, label: 'Voice?'
  = form.input :place
  - if obs.persisted?
    - if controller_name == 'cards'
      %div.bulk_select= check_box_tag('obs[]', obs.id)
    %div.align-center
      = link_to(obs.id, observation_path(obs))
      %br
      = default_destroy_link(obs)
    %div
      - if obs.post_id
        = post_link('post', obs.post)
  - else
    %div.align-center
      %span.remove= image_tag('/img/x_14x14.png', title: 'Remove row')
