- use_jquery
- javascript JQ_UI_FILE, 'suggest_over_combo'
- stylesheet 'autocomplete', 'forms'

- @page_title = (['new', 'create'].include?(action_name) ? 'New' : 'Editing') + ' observation'
- blogpost = @observation.post

%h2= @page_title

= simple_form_for @observation do |form|
  .bunch
    = form.association :locus, :label => 'Location:', :collection => Locus.all_ordered, :label_method => :name_en,
        :input_html => {:class => 'suggest-combo'}
    = form.input :observ_date, :as => :string, :label => 'Date:', :input_html => {:maxlength => 10, :type => 'date'}
    = form.input :mine, :label => 'Mine'
    - unless blogpost.nil?
      = form.association(:post, :as => :boolean, :label => false)
      %label.obs_post_label= post_link(blogpost.title, blogpost)
  .bunch
    = form.association :species, :label => 'Species:', :collection => Species.alphabetic,
        :label_method => :name_sci, :include_blank => false, :input_html => {:class => 'suggest-combo'}
    = form.input :quantity, :label => 'Quantity:'
    = form.input :biotope, :label => 'Biotope:'
    = form.input :place, :label => 'Place:'
    = form.input :notes, :label => 'Notes:'
  = form.button :submit, :value => 'Save'