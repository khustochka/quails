- @page_title = (['new', 'create'].include?(action_name) ? 'New' : 'Editing') + ' observation'

%h2= @page_title

= simple_form_for @observation do |form|
  .bunch
    = form.association :locus, :label => 'Location:', :label_method => :name_en, :collection => Locus.all_ordered
    = form.input :observ_date, :as => :string, :label => 'Date:', :required => false, :input_html => {:maxlength => 10}
    = form.input :mine, :label => 'Mine'
  .bunch
    = form.association :species, :label => 'Species:', :label_method => :name_sci, :collection => Species.alphabetic
    = form.input :quantity, :label => 'Quantity:'
    = form.input :biotope, :label => 'Biotope:'
    = form.input :place, :label => 'Place:'
    = form.input :notes, :label => 'Notes:'
  = form.button :submit, :value => 'Save'