- javascript 'observation_form'
- stylesheet 'forms'

- @page_title = "#{new_or_edit_label(@observation)} observation"
- @blogpost = @observation.post

%h1= @page_title

= render 'admin/shortcuts' if current_user.admin?

= simple_form_for @observation, html: {class: 'observation'} do |form|
  %div
    = render partial: 'common', locals: { form: form }

  = render partial: @observation

  .buttons
    = default_submit_button(form)
