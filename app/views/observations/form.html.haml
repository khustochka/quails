- @page_title = (['new', 'create'].include?(action_name) ? 'New' : 'Editing') + ' observation'

%h2= @page_title

= semantic_form_for @observation do |form|
  = form.inputs do
    = form.input :species, :label => 'Species', :label_method => :name_sci, :collection => Species.alphabetic
    = form.input :locus, :label => 'Location', :label_method => :code, :collection => Locus.all_ordered
    = form.input :observ_date, :as => :string, :label => 'Date'
    = form.input :quantity, :label => 'Quantity'
    = form.input :biotope, :label => 'Biotope'
    = form.input :place, :label => 'Place'
    = form.input :notes, :label => 'Notes'
    = form.input :mine, :label => 'Mine'
  = form.buttons
