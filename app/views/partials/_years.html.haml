- unless @years.blank?

  - url_builder = lambda do |year|
    - if controller_name == 'blog'
      - year_path(year: year)
    - else
      - significant_params.merge(year: year)

  %ul.horiz-list.filter-list
    %strong= t('.years')
    - @years.each do |year|
      %li
        - if year
          = link_to_or_span(year, url_builder.call(year))
        - else
          = params[:year].nil? ? content_tag(:span, t('misc.all')) : link_to(t('misc.all'), significant_params.merge(:year => nil))
