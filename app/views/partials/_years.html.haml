- unless @years.blank?
  %ul.horiz-list.filter-list
    %strong= t('.years')
    - @years.each do |year|
      %li
        - if year
          = link_to_or_span(year, significant_params.merge(:year => year))
        - else
          = params[:year].nil? ? content_tag(:span, t('misc.all')) : link_to(t('misc.all'), significant_params.merge(:year => nil))