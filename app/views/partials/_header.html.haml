#header

  = render 'admin/menu'

  #userheader

    = GoogleSearch.render(self)

    #search-ui-front

    #menucontainer

      - cache [:navigation_header, locale: I18n.locale] do

        -#= link_to(image_tag('/img/logo.png'), root_path, :id => 'site_cap')

        %ul#site_menu.horiz-list(role="menubar")
          %li(role="menuitem")= link_to t('menu.blog'), blog_path

          %li(role="menuitem")= link_to t('menu.birds_ukraine'), country_path(country: 'ukraine')

          %li(role="menuitem")= link_to t('menu.gallery'), gallery_path

          %li(role="menuitem")= link_to t('menu.map'), map_path

          %li(role="menuitem")= link_to t('menu.lifelist'), my_lists_path

          %li(role="menuitem")= link_to t('menu.links'), page_path(:links)

          %li(role="menuitem" class="trans-menu")= link_to t('menu.english'), localized_root_url(locale: :en)

  - if @translated
    = render partial: 'partials/translated', locals: {url: @translated_url}
