- provide(:admin_menu) do
  = render 'admin/menu'

#header
  = yield :admin_menu

  = link_to_or_span(image_tag('/img/logo.png'), root_path, :id => 'site_cap')

  %ul#site_menu.horiz-list(role="navigation")
    %li
      = link_to_or_span t('.menu.blog'), blog_path
      %ul
        %li= link_to_or_span t('.menu.archive'), archive_path

    %li
      = link_to_or_span t('.menu.birds_ukraine'), birds_ukraine_path
      %ul
        %li= link_to_or_span t('.menu.checklist'), checklist_path(slug: 'ukraine')

    %li
      = link_to_or_span t('.menu.galery'), photostream_path
      %ul
        %li= link_to_or_span t('.menu.photos'), photostream_path

    %li
      = link_to_or_span t('.menu.my_stats'), my_stats_path
      %ul
        %li= link_to_or_span t('.menu.lifelist'), lifelist_path
