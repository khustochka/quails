-# frozen_string_literal: true
- @page_title = t('.title')

- @robots = 'NOINDEX'

- @jumbo_image = "https://bwua-static.s3.eu-central-1.amazonaws.com/pauraque-jumbo.jpg"

- content_for :translated do
  = render 'app2/shared/translated'

- content_for :jumbo do
  = render 'partials/translated'
  %h1= @page_title

- content_for :jumbo_side do
  %ul.subheader-menu
    %li
      = link_to t('.records_and_stats'), lifelist_stats_path

- cache(key: CacheKey.lifelist) do

  .container

    = content_for :translated

    %header.simple-page-header
      %h1= @page_title

    .row

      .col-sm-12.col-md-6

        %h2.h3.top5-list-header= link_to('Lifelist', lifelist_path)

        = render partial: "top5list", object: @list_life

      .col-sm-12.col-md-6

        %h2.h3.top5-list-header= link_to(t('lifelist.title.yearlist', year: Quails::CURRENT_YEAR), list_path(year: Quails::CURRENT_YEAR))

        = render partial: "top5list", object: @list_current_year

    .row

      .col-sm-12.col-md-6

        %h2.h3.top5-list-header
          = link_to(t('lifelist.title.yearlist', year: Quails::CURRENT_YEAR - 1), list_path(year: Quails::CURRENT_YEAR - 1))

        = render partial: "top5list", object: @list_prev_year

      .col-sm-12.col-md-6.order-sm-first

        %h2.h3.top5-list-header
          = link_to(t('lifelist.title.canada'), list_path(locus: 'canada'))

        = render partial: "top5list", object: @list_canada
