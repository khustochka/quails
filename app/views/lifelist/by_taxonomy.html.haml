- @page_title = 'Lifelist by taxonomy'

%h1= @page_title

- if @species.blank?
  %p No species
- else
  = render 'sorter'
  %ol
    - i = 0
    - extract_families(@species).each do |fam, species_list|
      %h5= "%s: %s" % [fam[:order].upcase, fam[:family]]
      %ol
        - species_list.each do |sp|
          %li.lifer_row{:value => i += 1}
            %span
              = species_link(sp)
              = name_sci(sp)
            %time= l(Date.parse(sp.aggregated_value), :format => :long)
