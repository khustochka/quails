- @years = @lifelist.years
- locs = @lifelist.locations
= render 'partials/years'

%ul.horiz-list.filter-list
  %strong Places:
  %li= params[:locus].nil? ? content_tag(:span, t('misc.all')) : link_to(t('misc.all'), significant_params.merge(:locus => nil))
  - Lifelist::PUBLIC_LOCI.each do |slug|
    %li= link_to_or_span(locs[slug][0].name_en, significant_params.merge(:locus => slug))

- unless @lifelist.blank? || controller_name == 'research'
  %ul.horiz-list.filter-list
    %strong Sort by:
    - {nil => 'date', :by_count => 'count', :by_taxonomy => 'taxonomy'}.each do |sort, label|
      %li= link_to_or_span(label, significant_params.merge(:sort => sort))
