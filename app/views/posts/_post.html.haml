%article.post-box{:id => "post-#{post.code}", :class => post.status != 'OPEN' ? 'grayout' : nil}
  %header
    %h2.post-title= link_to(post.title, public_post_path(post))
    %time{:pubdate => 'pubdate'}= l(post.face_date, :format => :long)
    -#%small= post.topic

  = wiki_filter(post)
  - images = post.images.all
  - unless images.empty?
    %section= render :partial => 'images/thumbnail', :collection => images