- @page_title = "Year #{@year}"

%h2= "Year #{@year}"

= render 'partials/years'

- @months.keys.sort.each do |num|
  %h3= "Month #{link_to(num.to_i, month_path({:year => @year, :month => num}))}".html_safe
  %ul
    - @months[num].each do |post|
      %li= "#{post.day}: #{link_to(post.title, public_post_path(post))}".html_safe