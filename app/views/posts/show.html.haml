- @page_title = @post.title

= render 'admin/shortcuts' if admin_session?

= render @post

- unless @post.species.blank?
  %b Список видов:
  = @post.species.uniq.map { |sp| species_link(sp) }.join(", \n").html_safe

%p
  = link_to('Add more observations', new_observation_path(:post_id => @post.id)) if admin_session?

%p
  - unless @post.lj_url_id.blank?
    = link_to 'This post on Livejournal', lj_post_url