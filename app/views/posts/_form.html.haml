= simple_form_for @post do |form|

  = form.input :code, :label => 'Code'
  = form.input :title, :label => 'Title'
  = form.input :text, :label => 'Text'
  = form.input :topic, :label => 'Topic'
  = form.input :status, :label => 'Status'
  - if %w(edit update).include? action_name
    = form.input :lj_post_id, :label => 'Lj Post'
    = form.input :lj_url_id, :label => 'Lj Url'
  - else
    = form.input :lj_post_id, :as => :hidden
    = form.input :lj_url_id, :as => :hidden

  .actions
    = form.button :submit