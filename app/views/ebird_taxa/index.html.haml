-# frozen_string_literal: true
-# no_viewport is for very wide pages, e.g. with table
- @no_viewport = true
- @body_class = 'wider'

- @js_features = [:admin_instant_search]

- @page_title = 'EBird Taxonomy'

- provide :add_shortcuts do
  %li= link_to "Taxa", taxa_path
