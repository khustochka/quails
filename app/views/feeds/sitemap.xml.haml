!!! XML
%urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}

  -# home page
  %url
    %loc= root_url
    %lastmod= @root_lastmod
    %changefreq daily

  -# Birds of Ukraine page
  %url
    %loc= country_url(country: 'ukraine')
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# Ukraine checklist page
  %url
    %loc= checklist_url(country: 'ukraine')
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# Birds of USA page
  %url
    %loc= country_url(country: 'usa')
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# species gallery page
  %url
    %loc= gallery_url
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# Links page
  %url
    %loc= show_page_url(:links)

  -# Links page
  %url
    %loc= show_page_url(:winter)

  -# posts
  - @posts.each do |post|
    %url
      %loc= public_post_path(post, only_path: false, host: request.host)
      %lastmod= post.updated_at.iso8601
      %changefreq yearly

  -# images
  - @images.each do |img|
    %url
      %loc= image_url(img)
      %lastmod= img.created_at.iso8601
      %changefreq yearly

  -# species
  - @species.each do |sp|
    %url
      %loc= species_url(sp)
      -# %lastmod=
      %changefreq monthly
