!!! XML
%urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}

  -# home page
  %url
    %loc= root_url
    %lastmod= @root_lastmod
    %changefreq daily

  -# Birds of Ukraine page
  %url
    %loc= country_path(country: 'ukraine')
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# Ukraine checklist page
  %url
    %loc= checklist_path(country: 'ukraine')
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# photostream page
  %url
    %loc= images_url
    -# TODO: %lastmod=
    %changefreq weekly

  -# species gallery page
  %url
    %loc= gallery_url
    -# TODO: %lastmod=
    -#%changefreq weekly

  -# posts
  - @posts.each do |post|
    %url
      %loc= public_post_path(post, only_path: false, host: request.host)
      %lastmod= post.updated_at.iso8601
      %changefreq yearly

  -# images
  - @images.each do |img|
    %url
      %loc= image_path(img, only_path: false)
      %lastmod= img.created_at.iso8601
      %changefreq yearly

  -# species
  - @species.each do |sp|
    %url
      %loc= species_url(sp)
      -# %lastmod=
      %changefreq monthly
