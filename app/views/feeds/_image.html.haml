- image.formatted.title.tap do |img_title|
  %p= link_to image_tag(jpg_url(image), :alt => img_title), image_url(image), :title => img_title

= content_tag(list_type_for_image_species(image), class: 'img_species') do
  - image.species.each do |sp|
    %li
      = species_link(sp)
      = name_sci(sp)

= render partial: "images/long_details", formats: :html, locals: {image: image}
