- image_title(image) do |img_title|
  %p= link_to image_tag(jpg_url(image), :alt => img_title), public_image_path(image), :title => img_title

%p
  %i= image.species.map(&:name_sci) * ', '

%p= [l(image.observ_date, :format => :long), image.locus.name_en] * ', '

= wiki_filter(image.description)

- if p = image.post(current_user.available_posts)
  %p
    Post:
    = post_link(post_title(p), p, true)
