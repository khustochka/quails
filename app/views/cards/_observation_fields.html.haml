%div.obs-row
  - obs = form.object
  = form.association :species, collection: species_for_select,
      include_blank: true, required: false, input_html: {class: 'sp-suggest'}
  = form.input :mine, label: 'Mine?'
  = form.input :quantity, input_html: {class: :short}
  = form.input :notes
  = form.input :voice, label: 'Voice?'
  = form.input :place
  - if obs.persisted?
    %div.align-center
      = link_to(obs.id, edit_observation_path(obs))
      %br
      = default_destroy_link(obs)
    %div
      - if obs.post_id
        = link_to 'post', obs.post
  - else
    %div.align-center
      %span.remove= image_tag('/img/x_14x14.png', title: 'Remove row')
