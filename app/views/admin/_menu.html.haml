      = link_to 'Resque', "/resque"
      = render "admin/resque_badge"

    \|
    %li= link_to 'Photostream', images_path(admin_pages_url_options)
    %li= link_to 'Stats', research_stats_path(admin_pages_url_options)
    %li= link_to t('menu.lifelist'), advanced_list_path(admin_pages_url_options)

    %li
      %i= link_to "**Logout", logout_path(locale: nil)

- elsif has_trust_cookie?

  %ul.admin_menu
    %li.login_link
      = link_to 'Login', login_path(admin_pages_url_options)
