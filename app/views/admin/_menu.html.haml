  %ul.admin_menu
    %li.adder= link_to '+ Post', new_post_path(admin_pages_url_options)
    %li.adder= link_to '+ Card', new_card_path(admin_pages_url_options)
    %li.adder= link_to '+ Image', new_image_path(admin_pages_url_options)
    %li= link_to 'Drafts', hidden_posts_path(admin_pages_url_options)
    %li= link_to 'Species', admin_species_index_path(admin_pages_url_options)
    %li= link_to 'Cards', cards_path(admin_pages_url_options)
    %li= link_to 'Ebird', ebird_imports_path(admin_pages_url_options)
    %li= link_to 'Comments', comments_path(admin_pages_url_options)
    %li= link_to 'Locations', loci_path(admin_pages_url_options)
    %li= link_to 'Videos', videos_path(admin_pages_url_options)
    %li= link_to 'Research', research_path(admin_pages_url_options)
    %li= link_to 'Map Edit', edit_map_path(admin_pages_url_options)
