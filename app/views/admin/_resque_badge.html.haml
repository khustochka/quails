- begin
  - failed_jobs = Resque.info[:failed]
  - pending_jobs = Resque.info[:pending]
- rescue Redis::CannotConnectError
  - noredis = true

- if defined?(noredis) && noredis
  = link_to "X", "/resque", target: "_blank", class: "resque_badge tag alert"
- elsif defined?(failed_jobs) && failed_jobs > 0
  = link_to failed_jobs, "/resque/failed", target: "_blank", class: "resque_badge tag alert"
