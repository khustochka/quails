%html{lang: I18n.locale}

  %head

    -# meta tags
    -# encoding
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }

    %meta{ property: "og:title", content: page_title }
    %meta{ name: "title", content: page_title }

    - if @meta_thumbnail
      %meta{ property: "og:image", content: @meta_thumbnail }
      %meta{ name: "thumbnail", content: @meta_thumbnail }
      %link{ rel: 'image_src', href: @meta_thumbnail }

    - if @meta_description
      %meta{ property: "og:description", content: @meta_description }
      %meta{ name: "description", content: @meta_description }

    - if @og_type
      %meta{ property: "og:type", content: @og_type }

    - if FacebookSdk.configured?
      %meta{ property: "fb:app_id", content: FacebookSdk.config.code }
      %meta{ property: "fb:admins", content: "1567280817" }

    - if VkontakteSdk.configured?
      %meta{ property: "vk:app_id", content: VkontakteSdk.config.code }

    %title= page_title

    -# mobile viewport
    - unless @no_viewport
      -# no_viewport is for very wide pages, e.g. with table
      %meta{ name: 'viewport', content: 'width=device-width'}

    - unless admin_layout?

      -# robots
      - if @robots
        %meta{ name: 'robots', content: @robots}

      -# page information, keywords

      -# verifications (index only)

      -# rel canonical, self, alternate etc

      - if @canonical
        %link{href: @canonical, rel: "canonical"}
        %meta{content: @canonical, property: "og:url"}

      -# rss feeds
      - if @feed
        = auto_discovery_link_tag(:atom, {:controller => :feeds, :action => @feed, :format => :xml}, :title => @feed)

      -# OpenID (index only)

      -# sitemap (index only)

      -# favicon and other icon-related stuff: http://realfavicongenerator.net/
      %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon", :sizes => "180x180"}/
      %link{:href => "/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}/
      %link{:href => "/favicon-16x16.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}/
      %link{:href => "/manifest.json", :rel => "manifest"}/
      %link{:color => "#5bbad5", :href => "/safari-pinned-tab.svg", :rel => "mask-icon"}/
      %meta{:content => "#ffffff", :name => "theme-color"}/

    -# csfr meta
    = csrf_meta_tags

    -# stylesheets
    - stylesheet admin_layout? ? 'admin' : 'public'

    = render 'partials/css_and_js'

    = render_service_code(GoogleAnalytics)

  %body{class: @body_class, data: {'js-controller' => @js_controller, 'js-features' => @js_features.to_json}}

    - if @social_likes
      - cache :social_sdks do
        = render_service_code(FacebookSdk)
        = render_service_code(VkontakteSdk)
        = render 'social/gplus_sdk'

    #above-footer

      = render 'partials/header'

      - if content_for?(:jumbo)
        %div.jumbo-bg{style: "background-image: url(#{@jumbo_image})"}
          - if content_for?(:jumbo_side)
            %div.jumbo-side
              = content_for :jumbo_side
          %div.jumbo
            = content_for :jumbo

      - if !admin_layout? && $announcement
        %div.announcement
          :textile
            #{$announcement}

      -#- if !admin_layout? && !(controller_name == 'login')
      -#  .bannercontainer
      -#    - cache :winter_banner do
      -#      = render 'partials/winter_banner'

      %div{class: main_classes}

        = yield

    - cache [:footer, birdingtop: current_user.admin? || controller_name == 'maps'] do
      = render 'partials/footer'
