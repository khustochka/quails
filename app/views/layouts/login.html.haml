%html

  %head

    -# meta tags
    -# encoding
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }

    %title= page_title

    -# mobile viewport
    %meta{ name: 'viewport', content: 'width=device-width'}

    %meta{ name: 'robots', content: 'NOINDEX'}

    :css
      body {
        background-color: lightgray;
      }

      .main {
        width: 100%;
        min-height: 100%;
        text-align: center;
      }

      .form_container {
        margin: 0 auto;
        text-align: left;
        width: 282px;
        border: 2px solid gray;
        padding: 25px;
        border-radius: 10px;
        margin-top: 20px;
        background-color: white;
      }

      input {
        display: inline-block;
        padding: 10px;
        font-size: 20px;
        margin: 1px 1px 7px 0;
        width: 250px;
      }

      input.submit {
        width: 277px;
        margin-left: -1px;
      }

  %body

    .main

      = link_to 'Home', root_url

      .form_container
        = yield
