!!!

%html

  %head

    -# meta tags
    -# encoding
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }

    -# robots

    -# page information, keywords

    -# verifications (index only)

    -# csfr meta
    = csrf_meta_tags if @jquery

    -# rel canonical, self, alternate etc

    -# rss feeds
    - if @feed
      = auto_discovery_link_tag(:atom, {:controller => :feeds, :action => @feed, :format => :xml})

    -# OpenID (index only)

    -# sitemap (index only)

    -# favicon (index only?)

    %title= page_title

    -# stylesheets
    - if @minimal_layout
      = stylesheet_link_tag 'minimal'
    - else
      = stylesheet_link_tag 'public'
    = stylesheet_link_tag 'admin_addon' if current_user.admin?
    = stylesheet_link_tag 'mobile', :media => :handheld

    = render 'partials/css_and_js'

    -# google analytics

  %body

    #above-footer

      = render 'partials/header'

      .main
        =yield

    = render 'partials/footer'
