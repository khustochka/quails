.search-section{data: {search_url: search_localized_species_index_path(format: :json), fallback_text: t("partials.search.fallback_text")}}
  = form_tag search.form_url, method: :get, authenticity_token: false do
    .d-flex.justify-content-end
      = label_tag "cse-query-box", "Search website content", class: "form-label mr-2 sr-only"
      .search-form-section
        - if search.configured?
          = hidden_field_tag "cx", search.config.code
        - else
          = hidden_field_tag "as_sitesearch", "birdwatch.org.ua"
        = hidden_field_tag "ie", "UTF-8"
        = hidden_field_tag "lr", "lang_#{I18n.locale}"
        = search_field_tag "q", nil, id: "cse-query-box", class: "form-control form-control-sm", autocomplete: "off"
      .search-form-section
        = submit_tag t("partials.search.search_button"), name: "sa", id: "submit-search", class: "btn btn-sm"

