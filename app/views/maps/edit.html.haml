- javascript AssetsHelper::GMAP_API_URL, 'map.edit'
- @minimal_layout = true
- stylesheet 'map_edit'

- @page_title = 'Edit Map'

-# %h1= @page_title

= render 'observations/search'

.observ_form_container
  = simple_form_for @spot, url: save_spots_path, remote: true do |form|
    = form.input :id, as: :hidden
    = form.input :lat, as: :hidden
    = form.input :lng, as: :hidden
    = form.input :zoom, as: :hidden
    = form.input :observation_id, as: :hidden
    = form.input :exactness, as: :radio_buttons, collection: Spot::EXACTNESS.zip((0..2).to_a)
    = form.input :public
    %div
      = form.input :memo
    .buttons
      = default_submit_button(form)

%ul.obs-list
  -#= render :partial => 'observations/obs_item', :collection => @observations

.mapContainer
  #googleMap
  .crosshair
